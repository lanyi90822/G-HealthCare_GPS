<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FFF0"
    tools:context="com.example.hp.stepcount.Activity.Step_analyze">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1E90FF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="步态分析"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:background="#1E90FF" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/analyze_result"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="— —"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            />
        <TextView
            android:id="@+id/state_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="步态评估结果"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/start_analyze"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/start_analyze"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/step_them"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/analyze_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stepsugest"/>
    </LinearLayout>


</LinearLayout>
