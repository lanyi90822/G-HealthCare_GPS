<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0"
    android:orientation="vertical"
    tools:context="com.example.hp.stepcount.Activity.sleep">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1E90FF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="睡眠监测"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:background="#1E90FF" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/analyze_result"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="优"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            />
        <TextView
            android:id="@+id/state_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="睡眠评价结果"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/time_time"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/time_show"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:text="今天" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/time_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_toLeftOf="@+id/time_time"/>
        <ImageButton
            android:id="@+id/time_forward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/forward"
            android:layout_toRightOf="@+id/time_time"/>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp">
        <LinearLayout
            android:id="@+id/dddd"
            android:layout_width="351dp"
            android:layout_height="113dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D1EEEE"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="睡眠时长"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/sleep_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="8小时23分"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D9D9D9"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="深睡时长"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/deep_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="2小时10分"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D1EEEE"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="浅睡时长"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/low_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="6小时13分"/>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="113dp"
            android:layout_below="@+id/dddd"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D9D9D9"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="入睡时间"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/sleeped_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="21:00"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D1EEEE"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="起床时间"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/getup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="5:23"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:background="#D9D9D9"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="18dp"
                        android:text="起床次数"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/getup_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="0次"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>





</LinearLayout>
